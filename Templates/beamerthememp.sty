        \vskip2cm
        \begin{center}
			\includegraphics[scale = 1.5]{/home/baffelli/PhD_work/Texts/Templates/eo_logo_inv}
        \end{center}
        \vskip1.5cm
      \end{column}
      \begin{column}{.03\paperwidth}
      \end{column}
    \end{columns}
  \end{beamercolorbox}
  

  
  \begin{beamercolorbox}[wd=\paperwidth]{lower separation line head}
    \rule{0pt}{2pt}
  \end{beamercolorbox}
}




