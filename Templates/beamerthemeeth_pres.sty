%Outer Theme
\setbeamertemplate{headline}{
	\leavevmode
	\begin{beamercolorbox}[wd=\paperwidth]{headline}
		\begin{columns}[T]
			\column{0.1\paperwidth}
			\column{.2\paperwidth}
				\begin{center}
					\vspace{.05\baselineskip}
					\includegraphics[width=\linewidth]{eth_logo_kurz_neg.pdf}
					\vspace{0.5\baselineskip}
				\end{center}
			\column{0.5\paperwidth}
			\column{.2\paperwidth}
				\begin{center}
					\vspace{.05\baselineskip}
					\includegraphics[width = \linewidth]{eo_logo_inv.pdf}
					\vspace{0.5\baselineskip}
				\end{center}
			\column{0.1\paperwidth}
		\end{columns}
	\end{beamercolorbox}
}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\setbeamertemplate{title page}
{
	\leavevmode
	\begin{columns}[T]
	\column{0.8\paperwidth}
 	\begin{beamercolorbox}[wd = 0.8\paperwidth]{title in titlepage}
		\begin{center}
			\usebeamerfont{title in titlepage}\usebeamercolor[fg]{title in titlepage}{\inserttitle\\[1ex]}
			\usebeamerfont{subtitle in titlepage}\usebeamercolor[fg]{subtitle in titlepage}{\insertsubtitle\\[1ex]}
		\end{center}
 	\end{beamercolorbox}    
 	\begin{beamercolorbox}[wd = 0.8\paperwidth]{author in titlepage}
		\begin{center}
			\usebeamerfont{author in titlepage}\usebeamercolor[fg]{author in titlepage}{\insertauthor\\[1ex]}
			\usebeamerfont{institute in titlepage}\usebeamercolor[fg]{institute in titlepage}{\insertinstitute\\[1ex]}
		\end{center}
 	\end{beamercolorbox}  
 	\end{columns}
}





